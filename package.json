{
  "name": "@formily/web",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Formily sdk allows you to integrate your app to Formily, display surveys and trigger events.",
  "keywords": [
    "Formily",
    "surveys",
    "experience management"
  ],
  "source": "src/App.tsx",
  "main": "./dist/index.js",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "types": "./dist/js/src/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.module.js"
    },
    "./package.json": "./package.json",
    "./": "./"
  },
  "scripts": {
    "clean": "rimraf .turbo node_modules dist",
    "dev": "concurrently \"tailwindcss -i ./src/styles/globals.css -o dist/styles.css --watch\" \"microbundle --css inline --watch\"",
    "go": "microbundle --css inline --watch",
    "lint": "eslint '{src,tests}/**/*.{ts,tsx}'",
    "test": "jest",
    "build": "tailwindcss -i ./src/styles/globals.css -o dist/styles.css && microbundle --css inline"
  },
  "files": [
    "dist"
  ],
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ]
  },
  "author": "Formily <dev@formily.com>",
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "autoprefixer": "^10.4.14",
    "babel-jest": "^29.6.2",
    "classnames": "^2.3.2",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "eslint-config-preact": "^1.3.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-react": "7.33.1",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jest-fetch-mock": "^3.0.3",
    "jest-preset-preact": "^4.1.0",
    "microbundle": "^0.15.1",
    "preact": "10.16.0",
    "preact-cli": "^3.5.0",
    "preact-render-to-string": "^6.2.0",
    "regenerator-runtime": "^0.13.11",
    "tailwindcss": "^3.3.3"
  },
  "jest": {
    "transformIgnorePatterns": [
      "!node_modules/"
    ],
    "setupFiles": [
      "<rootDir>/tests/__mocks__/setupTests.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/tests/__mocks__/styleMock.js"
    }
  }
}
